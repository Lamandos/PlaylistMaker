<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="menu_theme_header">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">22sp</item>
    <item name="android:fontFamily">@font/ys_text_medium</item>
    <item name="textAllCaps">false</item>
    </style>

    <style name="settings_theme_header">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="search_error">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="NoResultsImage">
        <item name="android:src">@drawable/ic_no_results_dark</item>
    </style>
    <style name="NetworkErrorImage">
        <item name="android:src">@drawable/ic_network_error_dark</item>
    </style>
    <style name="refresh_btn" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="history">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="clear_history_btn" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="menu_theme" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">@dimen/button_insert</item>
        <item name="android:insetBottom">@dimen/button_insert</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/button_corners</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="settings_theme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingTop">@dimen/set_menutext_pad_top</item>
        <item name="android:paddingStart">@dimen/set_menutext_pad_startbottom</item>
        <item name="android:paddingBottom">@dimen/set_menutext_pad_startbottom</item>
    </style>

    <style name="settings_btns">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="day_night_switch">
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorSwitchThumbNormal">@color/yp_gray</item>
        <item name="android:colorForeground">@color/yp_light_gray</item>
    </style>

    <style name="search_bar">
        <item name="android:layout_marginStart">@dimen/margin_def</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_marginBottom">@dimen/margin_half</item>
        <item name="android:layout_marginEnd">@dimen/margin_def</item>
        <item name="android:background">@drawable/search_corners_day</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:drawableTint">@color/yp_black</item>
    </style>

    <style name="search_clear_icon">
        <item name="android:layout_width">@dimen/search_bar_clear_icon</item>
        <item name="android:layout_height">@dimen/search_bar_clear_icon</item>
        <item name="android:layout_marginEnd">@dimen/search_bar_ci_merg</item>
        <item name="android:background">@drawable/clear_btn</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:layout_gravity">center|end</item>
    </style>

    <style name="song_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="artist_time">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="settings_btn_back_style">
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="player_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="player_artist">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="player_info_main">
        <item name="android:textColor">@color/yp_gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="player_info">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:maxLength">40</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/yp_black</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>
    <style name="BottomNavTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/bottom_nav_background</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.BottomNav.NoRipple</item>
    </style>

    <style name="ThemeOverlay.BottomNav.NoRipple" parent="">
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>
    <style name="playlist_hints">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="playlist_create">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="playlist_name_count">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>